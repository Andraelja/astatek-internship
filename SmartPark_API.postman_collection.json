{
  "info": {
    "name": "SmartPark API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/users/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/users/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "users", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Parking Lots",
      "item": [
        {
          "name": "Get All Parking Lots",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/parking-lot",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "parking-lot"]
            }
          }
        },
        {
          "name": "Create Parking Lot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Parking Lot\",\n  \"location\": \"123 New St\",\n  \"total_slots\": 50,\n  \"available_slots\": 50\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/parking-lot",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "parking-lot"]
            }
          }
        },
        {
          "name": "Get Parking Lot Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/parking-lot/admin/statistics",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "parking-lot", "admin", "statistics"]
            }
          }
        }
      ]
    },
    {
      "name": "Parking Slots",
      "item": [
        {
          "name": "Get Slots by Lot",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/parking-slot/lot/{{lotId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "parking-slot", "lot", "{{lotId}}"]
            }
          }
        },
        {
          "name": "Update Slot Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"OCCUPIED\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/parking-slot/{{slotId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "parking-slot", "{{slotId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Book Slot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"slot_id\": \"{{slotId}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3001/api/bookings/book",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "bookings", "book"]
            }
          }
        },
        {
          "name": "Check-in",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/bookings/checkin/{{bookingId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "bookings", "checkin", "{{bookingId}}"]
            }
          }
        },
        {
          "name": "Check-out",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3001/api/bookings/checkout/{{bookingId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["api", "bookings", "checkout", "{{bookingId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "lotId",
      "value": "",
      "type": "string"
    },
    {
      "key": "slotId",
      "value": "",
      "type": "string"
    },
    {
      "key": "bookingId",
      "value": "",
      "type": "string"
    }
  ]
}
